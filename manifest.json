{
  "manifest_version": 3,
  "name": "Officier Red",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "webRequest",
    "storage",
    "notifications",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "rules1",
        "path": "rules.json",
        "enabled" : true
      }
    ]
  }
}
